#!/bin/bash

read INPUT

BOSH_PACKAGES_DIR=${BOSH_PACKAGES_DIR:-/var/vcap/packages}
BOSH_JOBS_DIR=${BOSH_JOBS_DIR:-/var/vcap/jobs}

PATH=$BOSH_PACKAGES_DIR/ruby_alicloud_cpi/bin:$PATH
export PATH

export BUNDLE_GEMFILE=$BOSH_PACKAGES_DIR/bosh_alicloud_cpi/Gemfile

bundle_cmd="$BOSH_PACKAGES_DIR/ruby_alicloud_cpi/bin/bundle"

echo $INPUT | $bundle_cmd exec $BOSH_PACKAGES_DIR/bosh_alicloud_cpi/bin/alicloud_cpi \
  $BOSH_JOBS_DIR/alicloud_cpi/config/cpi.json

exit 0
